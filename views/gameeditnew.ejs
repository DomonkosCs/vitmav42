    <%- include('header') -%> 
        <title>
            <%= (typeof game === 'undefined') ? 'Add' : 'Modify' %> Game
        </title>
    </head>
    <body class="vh-100 pt-5 bg-light bg-gradient">
        <div class="containter">
            <form method="POST">
                <div class="card mx-auto shadow" style="max-width: 400px">
                    <div class="card-header">
                        <%= (typeof game === 'undefined') ? 'Add' : 'Modify' %>
                        Game
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label for="inputName" class="form-label"
                                >Name</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="inputName"
                                name="name"
                                value="<%= (typeof game === 'undefined') ? '' : game.name %>" />
                        </div>
                        <div class="mb-4">
                            <label for="inputVersion" class="form-label"
                                >Version</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="inputVersion"
                                name="version"
                                value="<%= (typeof game === 'undefined') ? '1.0.0' : game.version %>" />
                        </div>
                        <div class="mb-4">
                            <label for="inputRule" class="form-label"
                                >Rule</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="inputRule"
                                name="rule"
                                value="<%= (typeof game === 'undefined') ? '' : game.rule %>" />
                        </div>
                        <div class="mb-4">
                            <label for="inputGoal" class="form-label"
                                >Goal</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="inputGoal"
                                name="goal"
                                value="<%= (typeof game === 'undefined') ? '' : game.goal %>" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="float-end">
                            <a
                                class="btn btn-outline-primary"
                                href="<%= typeof game === 'undefined' ? '/' : `/games/${game.id}` %> "
                                >Cancel</a
                            >
                            <input
                                type="submit"
                                class="btn btn-primary"
                                value="Submit" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>
